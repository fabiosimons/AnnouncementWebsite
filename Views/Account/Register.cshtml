@model WebCoursework.ViewModels.RegisterViewModel
<html class="backgroundImage" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
</head>
<body>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="centered-RegLogin">
            <div>
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName"></span>
                <input id="inputWidth" asp-for="FirstName" />
            </div>
            <div>
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName"></span>
                <input id="inputWidth" asp-for="LastName" />
            </div>
            <div>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
                <input id="inputWidth" asp-for="Email" />
            </div>
            <div>
                <label asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
                <input id="inputWidth" asp-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword"></span>
                <input id="inputWidth" asp-for="ConfirmPassword" />
            </div>
            <input class="LoginButton" type="submit" value="Register" />
            <p>Already have an account? <a asp-action="Login">Sign In</a></p>

        </div>
    </form>
    </body>
</html>

